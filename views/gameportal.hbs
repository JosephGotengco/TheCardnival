<!DOCTYPE html>
<html>
{{> head}}

<body class="game_body">
    {{> header}}
    <br><br>
    <div id="custom-jumbo" class="jumbotron container-fluid">
        <div id="gameCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#game1" data-slide-to="0" class="active"></li>
                <li data-target="#game2" data-slide-to="1"></li>
                <li data-target="#game3" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/img/bgsmalldemo.png" alt="First game">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Big or Small</h5>
                        <p>Some random description for Big or Small</p>
                        <form method="GET" action="/">
                            <button class="btn btn-info" type="submit" value="Register Account">Click here to
                                play!</button>
                        </form>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/bgsmalldemo.png" alt="Second game">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>...</h5>
                        <p>...</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/bgsmalldemo.png" alt="Third game">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>...</h5>
                        <p>...</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#gameCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#gameCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    {{> footer}}
</body>

</html>