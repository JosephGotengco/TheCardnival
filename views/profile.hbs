<!DOCTYPE html>
<html>
{{> head}}



<body style="background:url('https://us.123rf.com/450wm/yamabikay/yamabikay1612/yamabikay161200085/69448418-poker-table-felt-background-high-resolution-photo-.jpg?ver=6')">

    {{> header}}

    <div class="container">

        <div class="row" align="center">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="card">
                    <div align="center">
                        <br>
                        <h2 class="card-title" align="center">Profile</h2>
                        <br>
                        <hr class="my-4">
                    </div>
                    <div class="container" align="center">
                        <img class="card-img-top" src=https://firebasestorage.googleapis.com/v0/b/bigorsmall-9c0b5.appspot.com/o/default.jpg?alt=media&token=4d525069-490a-4c38-a845-44e104608025 alt="Profile pic" style="max-width: 300px; max-height: 300px">
                        <br>
                        <div class="box" align="center">
                            <div class="form-inline" >
                                <!--<div class="box col-2"></div>-->
                                <div class="box col-3" align="left">First Name</div>
                                <div class="boxinfo" id="fname" align="left">{{fname}}</div>
                            </div>
                            <div class="form-inline">
                                <div class="box col-3" align="left">Last Name</div>
                                <div class="boxinfo" id = "lname" align="left">{{lname}}</div>
                            </div>

                            <div class="form-inline">
                                <div class="box col-3" align="left">E-mail</div>
                                <div class="boxinfo" align="left">{{email}}</div>
                            </div>

                            <div class="form-inline">
                                <div class="box col-3" align="left">Balance   </div>
                                <div class="boxinfo" align="left">{{balance}}</div>
                            </div>
                        </div>
                        <br>
                        <br>
                        <hr class="my-4">
                        <canvas id="myDoughnutChart" width="380" height="380"></canvas>
                        <br>
                        <div class="container" align="center">
                            <div class="form-inline">
                                <div class="box col-3" align="left">Games played</div>
                                <div class="boxinfo" align="left">{{big_or_small.games_played}}</div>
                            </div>
                            <div class="form-inline">
                                <div class="box col-3" align="left">Games won</div>
                                <div class="boxinfo" align="left">{{big_or_small.games_won}}</div>
                            </div>
                            <div class="form-inline">
                                <div class="box col-3" align="left">High Score</div>
                                <div class="boxinfo" align="left">{{big_or_small.high_score}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3"></div>

            <!--<div class="col-6">-->
                <!--<div class="container">-->
                    <!--<div class="row">-->
                        <!--<div class="col-6" line-height="400px">-->
                        <!--<div class="col-6" line-height="400px"><canvas id="myDoughnutChart" width="380" height="380"></canvas></div>-->
                    <!--</div>-->
                    <!--<div class="row">-->
                        <!--<div class="col-6" line-height="400px"><canvas id="myDoughnutChart" width="380" height="380"></canvas></div>-->
                        <!--<div class="col-6" line-height="400px"><canvas id="myDoughnutChart" width="380" height="380"></canvas></div>-->
                    <!--</div>-->
                <!--</div>-->
            <!--</div>-->

        </div>
    </div>

    {{> footer}}



</body>
<script>
    var ctx = document.getElementById("myDoughnutChart");
    ctx.font = "32px Verdana";
    ctx.fillStyle = '#000';
    var myDoughnutChart = new Chart(ctx, {
        "type": "doughnut",
        "data": {
            "labels": ["Games Played", "Games Won"],
            "datasets": [{
                "label":{{big_or_small.high_score}},
                "data": [{{big_or_small.games_played}},{{big_or_small.games_won}}],
                "backgroundColor": [
                    "rgb(255, 99, 132)",
                    "rgb(54, 162, 235)"]
            }],
        },
        center: {
            text:"hi"
        }
    });

</script>
</html>