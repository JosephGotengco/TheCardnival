<!DOCTYPE html>
<html>
{{> head}}

<body class="signin">
    {{> header}}
    <br>
    <br>
    <div id='reg-jumbo' class="jumbotron container-fluid">
        <br>
        <br>
        <br>
        <br>
        <br>
        <div class="container">
            <form id="form1" method="POST" action="/game">
                <h1 class="loginTitles">Login</h1>
                <hr>
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email</span>
                    </div>
                    <input class="form-control" type="text" placeholder="Enter Email" name="email" id="email" required>
                </div>
                <br>
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Password</span>
                    </div>
                    <input class="form-control" type="password" placeholder="Enter Password" name="password"
                        id="password" required>
                </div>
                <br>
                <button class='btn btn-lg btn-success' style="width:100%" type="submit" value="Login">Login</button>
            </form>
            <h5 style="text-align:center; color:red">{{failed}}</h5>
        </div>
        <br>
        <div class="container">
            <form id="form2" method="GET" action="/">
                <button class="btn btn-lg btn-info" style="width:100%" type="submit" value="Register Account">Don't
                    have an account? Register here!</button>
            </form>
        </div>
        <hr class='my-2'>
        <div class="container">
            <form id="form2" method="GET" action="/deck">
                <button class="btn btn-lg btn-secondary" style="width:100%" type="submit" value="Play as Guest"> Want to
                    play the game? Play as Guest!</button>
            </form>
        </div>

    </div>
    {{> footer}}
</body>

</html>