<!DOCTYPE html>
<html>
{{> head}}

<body id="rankings">
    {{> header}}
    <br><br><br>
    <div id='custom-jumbo' class="jumbotron container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="list-group list-group-horizontal" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-bsgame-list" data-toggle="list"
                        href="#list-bsgame" role="tab" aria-controls="bsgame">Big or Small</a>
                    <a class="list-group-item list-group-item-action" id="list-game2" data-toggle="list" href="#game2"
                        role="tab" aria-controls="game2">Joker Get</a>
                    <a class="list-group-item list-group-item-action" id="list-game3" data-toggle="list" href="#game3"
                        role="tab" aria-controls="game3">CardBomb!</a>
                </div>
            </div>
        </div>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-bsgame" role="tabpanel" aria-labelledby="list-bsgame-list">
                <div class="card">
                    <div class="card-body">
                        <h1 class='card-title'>Big or Small Rankings</h1>
                        <p>{{{rankings}}}</p>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="game2" role="tabpanel" aria-labelledby="list-game2">
                <div class="card">
                    <div class="card-body">
                        <h1 class='card-title'>Joker Get Rankings</h1>
                
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="game3" role="tabpanel" aria-labelledby="list-game3">
                <div class="card">
                    <div class="card-body">
                        <h1 class='card-title'>CardBomb! Rankings</h1>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> footer}}
</body>

</html>